{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "noEmit": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "paths": {
            "@constant": ["./src/constant.js"],
            "@fetcher": ["./src/fetcher.js"],
            "@api/*": ["./src/api/*/index.js"],
            "@types": ["./src/types.js"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
